<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dokumen"
            android:id="@+id/textView2"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tidak ada dokumen yang pernah dibuka"
            android:id="@+id/id_none"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp" />

        <ListView
            android:id="@+id/listViewResults"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_ic_action_add"
        fab:fab_colorNormal="#FF5252"
        fab:fab_colorPressed="#FF5722"
        fab:fab_colorRipple="#FFEB3B" />

</FrameLayout>

